{
  "manifest_version": 3,
  "name": "20-20-20 Eye Care Reminder",
  "version": "1.0",
  "description": "Reminds you to follow the 20-20-20 rule to protect your eyes while working.",
  "permissions": ["notifications", "storage", "alarms"],
  "icons": {
    "128": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "20-20-20 Eye Care Reminder",
    "default_icon": "icon.png"
  }
}
